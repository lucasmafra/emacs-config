(defun cider-reset ()
  (interactive)
  (save-some-buffers 'no-confirm)
  (cider-switch-to-repl-buffer)
  (cider-interactive-eval "(reset)")
  (cider-switch-to-last-clojure-buffer)
  (cider-interactive-eval "(println :ok)"))

(global-set-key (kbd "C-c r") 'cider-reset)

